{
  "manifest_version": 3,
  "name": "MSLogin Cookie Intercept",
  "version": "1.2",
  "permissions": [
    "cookies",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://login.microsoftonline.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "MSLCP Active"
  }
}

